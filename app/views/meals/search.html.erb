
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Day time</th>
      <th>Item1</th>
      <th>Item2</th>
      <th>Item3</th>
      <th>Item4</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.day_time %></td>
        <td><%= meal.item1 %></td>
        <td><%= meal.item2 %></td>
        <td><%= meal.item3 %></td>
        <td><%= meal.item4 %></td>
        <td><%= link_to 'Show', meal, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>