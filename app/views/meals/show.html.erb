<div class="row">
  <div class="col-md-3">
    <%= image_tag @meal.avatar_url, class: "img-thumbnail" %>
    <h2>
      <%= @meal.day_time %>
    </h2>
    <br>
    <h4>
      <%= @meal.item1 %>
    </h4>
    <br>
    <h4>
      <%= @meal.item2 %>
    </h4>
    <br>
    <h4>
      <%= @meal.item3 %>
    </h4>
    <br>
    <h4>
      <%= @meal.item4 %>
    </h4>
    <br>
    <br>
    <%= link_to "Write Review", new_meal_review_path(@meal), class: "btn btn-primary" %>
  </div>

  <div class="col-md-9">
    <% if @reviews.blank? %>
    <h3> This item does not have any reviews yet. Be ther first to write one! </h3>
    <% else %>
      <% @reviews.each do |review| %>
        <p><%= review.rating %></p>
        <p><%= review.comment %></p>
      <% end %>
    <% end %>
  </div>
</div>

<%= link_to 'Edit', edit_meal_path(@meal), class: "btn btn-link" %> |
<%= link_to 'Back', meals_path, class: "btn btn-link" %>
